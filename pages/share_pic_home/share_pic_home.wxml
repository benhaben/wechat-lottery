<view class="h-flex flex-col container ">
  <view class=" flex-grow-1 h-flex flex-align-center flex-justify-content-center">
    <image mode="aspectFit" src="{{url}}"/>
  </view>

  <view class="album height120 h-flex flex-justify-content-around flex-align-center">
    <van-button custom-class="btn" type="danger" size="normal" icon="photo-o" class="album__btn" bindtap="onSaveToAlbum">保存到相册</van-button>
    <van-button custom-class="btn" icon="share" open-type="share" type="primary" hairline>分享</van-button>
  </view>
</view>

<van-dialog id="van-dialog"/>
<van-toast id="van-toast"/>
