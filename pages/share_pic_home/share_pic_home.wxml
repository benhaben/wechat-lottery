<view class="h-flex flex-col container flex-col">
  <view class="flex-grow-1 height-per100 weight-per100 h-flex flex-align-center">
    <image mode="widthFix" class="weight-per100 height-per100" src="{{url}}"/>
  </view>

  <poster class="poster" id="poster" config="{{posterConfig}}" bind:success="onPosterSuccess"  bind:fail="onPosterFail">
  </poster>

  <view class="album height120 h-flex flex-justify-content-around flex-align-center">
    <van-button custom-class="btn" type="danger" size="normal" icon="photo-o" class="album__btn margin30-right" bindtap="onSaveToAlbum">保存到相册</van-button>
    <van-button custom-class="btn" icon="share" open-type="share" type="primary" hairline>分享</van-button>
  </view>
</view>

<van-dialog id="van-dialog"/>
<van-toast id="van-toast"/>
