.home-container {
    width: 100vw;
    height: 100vh;
}

.top-area {
    display: grid;
    margin: auto 20rpx;
    height: 100rpx;
    grid-template-columns: 32rpx 15rpx auto auto 32rpx;
    grid-column-gap: 15rpx;
    align-items: center;
}

.top-area .icon-heart {
    display: inline-block;
    background-image: url("data:image/svg+xml;base64,");
    background-size: cover;
    width: 32rpx;
    height: 32rpx;
    justify-self: start;
}

.top-area .wishs-number {
    justify-self: start;
}

.top-area .wishs-text {
    justify-self: start;
    font-size: 28rpx;
    font-weight: 300;
}

.top-area .clock-in {
    justify-self: end;
    font-size: 28rpx;
    font-weight: 300;
}

.top-area .icon-right {
    display: inline-block;
    background-image: url("data:image/png;base64,");
    background-size: cover;
    width: 32rpx;
    height: 32rpx;
    justify-self: end;
}

