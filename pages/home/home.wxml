<view class="margin64-bottom">
  <view class="height80 margin15-30 border-bottom h-flex flex-row flex-align-center flex-justify-content-between">
    <view class="h-flex flex-row flex-align-center">
      <van-icon class="bar__lucky-like color-red" size="40rpx" name="like"/>
      <view class="margin15 ">
        {{lucky_num}} 运气值
      </view>
    </view>

    <view class="color-gray" bindtap="onGotoSign">
      去签到
      <van-icon class="link-text-arrow" name="arrow"/>
    </view>
  </view>


  <view class="height80 margin15-30 color-gray h-flex flex-align-center flex-justify-content-between">
    <view class="h3 color-red">每日推荐</view>
    <view class="share" bindtap="onShare">每日集好运 | 分享</view>
  </view>


  <view class="margin30-bottom" wx:for="{{lotteries}}" wx:key="{{index}}">
    <lottery-item bindtap="onLotteryItem" lottery="{{item}}"></lottery-item>
  </view>

  <view class="bottom h-flex flex-col flex-align-center" bindtap="onMore">
    <view class="bottom__info">
      点击加载更多
    </view>
  </view>
</view>

