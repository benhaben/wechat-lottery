<view class="home">
  <view class="bar h-flex flex-row flex-align-center flex-justify-content-between">
    <view class="h-flex flex-row flex-align-center">
      <van-icon class="bar__lucky-like color-red" size="60rpx" name="like"/>
      <view class="bar__lucky-num ">
        {{lucky_num}} 运气值
      </view>
    </view>

    <view class="bar__sign" bindtap="onGotoSign">
      去签到
      <van-icon class="arrow-vertical-align" name="arrow"/>
    </view>
  </view>


  <view class="list-bar h-flex flex-align-center flex-justify-content-between">
    <view class="list-bar__title">每日推荐</view>
    <view class="share" bindtap="onShare">每日集好运 | 分享</view>
  </view>


  <view class="container">
    <lottery-item class="container__lottery-item" bindtap="onLotteryItem" wx:for="{{lotteries}}" wx:key="{{index}}"
                  lottery="{{item}}"></lottery-item>
  </view>

  <view class="bottom h-flex flex-col flex-align-center">
    <button class="bottom__btn color-white bg-red" bindtap="onMore">
      点击加载更多抽奖
    </button>
    <view class="bottom__info"></view>
  </view>
</view>

