/* pages/attend_lottery/attend_lottery.wxss */

.container__select-image {
  height: 70rpx;
  line-height: 60rpx;
  width: 250rpx;
  margin: 12rpx;
  background: black;
  opacity: 0.7;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container__select-image-icon {
  color: red;
  height: 50rpx;
  width: 50rpx;
}

.info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  background-color: white;
  padding: 10rpx 20rpx;
}

.info__row_left {
  flex-basis: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.info__row_left image{
  margin-right: 20rpx;
}

.info__row_right {
  flex-basis: 50%;
  display: flex;
  flex-direction: row-reverse;
}

.container__tag {
  margin: 30rpx 0rpx;
  background: white;
  display: flex;
  flex-direction: column;
}

.container__tag_bar{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.container__tag_items {
  background: lightgoldenrodyellow;
  padding: 20rpx;
}

.container__tag_item {
  height: 60rpx;
  line-height: 60rpx;
  width: 150rpx;
  background: white;
  margin: 10rpx;
  color: gray;
  text-align: center;
}

.weight{
  height: 100rpx;
  padding: 0rpx 30rpx;
  justify-content: space-between;
}

.container-info{
  display: flex;
  flex-direction: row;
  height: 40rpx;
  background: white;
  color: gray;
  font-size: 25rpx;
  justify-content: space-between;
}
.weight-info{
  text-align: right;
  padding-right: 30rpx;
}
.lucky-info{
  text-align: left;
  padding-left: 30rpx;
}

.action{
  margin: 30rpx 0rpx;
  background: white;
  width: 100%;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.action__btn{
  line-height: 200rpx;
  font-size: 30rpx;
  height: 200rpx;
  width: 200rpx;
}

.action__row{
  min-height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.action__num{
  font-size: 25rpx;
}
.action__avatar{
  margin: 6rpx;
}

.add-lottery{
  height: 80rpx;
  width: 100%;
  color: gray;
  font-size: 25rpx;
  display: inline-block;
  text-align: center;
}
.icon{
  font-size: 25rpx !important;
  color: gray;
  vertical-align: -2rpx;
}

.share{
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.share__btn{
  margin: 30rpx 0rpx 0rpx 0rpx;
  width: 80%;
  height: 80rpx;
  background: gray;
  color: white;
  font-size: 35rpx;
}

.share__tips{
  margin: 15rpx;
  color:gray;
  font-size: 25rpx;
  text-align: center;
}


