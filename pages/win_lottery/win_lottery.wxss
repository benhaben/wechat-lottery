/* pages/win_lottery/win_lottery.wxss */


.container__select-image {
  height: 70rpx;
  line-height: 60rpx;
  width: 250rpx;
  margin: 12rpx;
  background: black;
  opacity: 0.7;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container__select-image-icon {
  color: red;
  height: 50rpx;
  width: 50rpx;
}

.info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  background-color: white;
  padding: 10rpx 20rpx;
}

.info__row_left {
  flex-basis: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.info__row_left image{
  margin-right: 20rpx;
}

.info__row_right {
  flex-basis: 50%;
  display: flex;
  flex-direction: row-reverse;
}


.container__tag {
  margin: 30rpx 0rpx;
  background: white;
  display: flex;
  flex-direction: column;
}

.container__tag_bar{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.container__tag_items {
}
.container__tag_item {
  height: 60rpx;
  line-height: 60rpx;
  width: 150rpx;
  background: white;
  margin: 5rpx;
  color: gray;
  text-align: center;
}

.container__desc{
  padding: 10rpx 30rpx;
  color: gray;
}

.switch{
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
}

.switch__item{
  flex-basis: 45%;
}

.win{

}

.win-switch__item{
  height: 160rpx;
  width: 320rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
