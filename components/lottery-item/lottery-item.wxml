<view class="container" bindtap="_onTap">
  <view class="container__image" style="background-image: url('{{lottery.url}}')">
    <view class="container__hash">
      <view class="container__hash-image-icon">
        <van-icon size="35rpx" name="gift"/>
      </view>
      <view>
        <text>{{lottery.hash}}</text>
      </view>
    </view>
  </view>
  <view class="info">
    <view class="info-row">
      <view class="info__row_left">
        <view class="info__row_title">
          总奖：
        </view>
        <view class="info__row_value">
          {{lottery.total}}
        </view>
      </view>

      <view class="info__row_right">
        <view class="info__row_value">
          {{lottery.dudai_num}} 个
        </view>
        <view class="info__row_title">
          福袋：
        </view>

      </view>
    </view>

    <view class="info-row">
      <view class="info__row_left">
        <view class="info__row_title">
          倒计时：
        </view>
        <view class="info__row_value">
          {{lottery.countdownStr}}
        </view>
      </view>

      <view class="info__row_right">
        <view class="info__row_value">
          {{lottery.open_people_num}} 人
        </view>
        <view class="info__row_title">
          开奖人数：
        </view>

      </view>
    </view>

    <view class="info-row text-center">
      <text>【好运码头】官方商城赞助此次活动</text>

<!--      <view class="info__row_left text-center">-->
<!--        <image src="{{lottery.avatar}}"></image>-->
<!--        <text>小米官方商城赞助此次活动</text>-->
<!--      </view>-->
<!--      <view class="info__row_right">-->
<!--        发起人-->
<!--      </view>-->
    </view>
  </view>
</view>
