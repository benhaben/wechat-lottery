
.container__select-image {
  height: 70rpx;
  line-height: 60rpx;
  width: 250rpx;
  margin: 12rpx;
  background: black;
  opacity: 0.7;
  color: white;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container__select-image-icon {
  color: red;
  height: 50rpx;
  width: 50rpx;
}

.info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  background-color: white;
  padding: 10rpx 20rpx;
}

.info__row_left {
  flex-basis: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.info__row_left image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.info__row_right {
  flex-basis: 50%;
  display: flex;
  flex-direction: row-reverse;
}
.container{
  margin-bottom: 38rpx;

}
