.vip {
    display: inline-flex;
    align-items: center;
    border: 1rpx solid #cd7f32;
    padding: 10rpx;
}

.vip text {
    display: inline-block;
    font-size: 24rpx;
    color: #cd7f32;
    font-weight: bold;
    line-height:0;
}

.vip .icon-vip {
    background-image: url("data:image/png;base64,");
    background-size: cover;
    width: 20rpx;
    height: 20rpx;
}

.time {
    font-size: 24rpx;
    font-weight: 300rpx;
    color: #aeaeae;
}

.hr {
    display: block;
    height: 1rpx;
    margin: auto 20rpx;
    background-color: #aeaeae;
}

.divider {
    display: inline-block;
    width: 2rpx;
    height: 28rpx;
    background-color: #aeaeae;
    justify-self: center;
    align-self: center;
}

.font-sma {
    display: inline-block;
    font-size: 28rpx;
    font-weight: 300;
}

.font-mid {
    display: inline-block;
    font-size: 32rpx;
    font-weight: 400;
}

.font-big {
    display: inline-block;
    font-size: 36rpx;
    font-weight: 500;
}

.color-red {
    color: #d81e06;
}


