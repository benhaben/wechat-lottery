._wrap {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.status-bar {
  width: 100%;
  box-sizing: border-box;
  background-color: transparent;
  opacity: 0;
}
.navigation-bar {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  text-align: center;
  position: relative;
}
.nav-actions {
  position: absolute;
  bottom: 8px;
  left: 7px;
  z-index: 1;
  min-width: 54px;
  height: 32px;
  border-radius: 16px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 17px;
  background-color: rgba(255, 255, 255, 0.5);
  color: #000;
}
.nav-actions .border {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 200%;
  height: 200%;
  box-sizing: border-box;
  border: 1px solid #eaeaea;
  border-radius: 32px;
  transform-origin: 0 0;
  transform: scale(0.5);
}
.nav-actions.light {
  color: #fff;
  background-color: rgba(0, 0, 0, 0.16);
}
.nav-actions.light .border {
  border: 1px solid rgba(255, 255, 255, 0.24);
}
.nav-actions.light .line {
  background-color: rgba(255, 255, 255, 0.28);
}
.nav-actions .nav-back,
.nav-actions .nav-home {
  width: 43px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-actions .nav-back {
  font-size: 15px;
  overflow: hidden;
}
.nav-actions .line {
  width: 1px;
  height: 18px;
  margin-top: 7px;
  background-color: #cccccc;
  transform: scaleX(0.5);
  transform-origin: 100% 50%;
}
.nav-actions .back-image {
  width: 8px;
  height: 14px;
}
.nav-actions .home-image {
  width: 17px;
  height: 17px;
}
.slot {
  overflow: visible;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
}
.nav-title {
  max-width: 150px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: auto;
  text-align: center;
  font-weight: 700;
  font-size: 18px;
  color: #000;
}
.nav-title.light {
  color: #fff;
}
